@using LadowebservisMVC.Models
@model LadowebservisMVC.Controllers.Models.ContactModel_Sk

<div class="container card pt-4 text-center">
    <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
            @*<div class="card pt-4 text-center">*@
                <p class="contact-items">
                    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                    <span>info@ladowebservis.sk</span>
                    <br />
                    <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>
                    <span>+421917952432</span>
                </p>

                <h2 class="visible-xs-block visible-sm-block" style="font-size:20px;color:#ffffff;text-shadow:1px 1px 4px #5d33fb;text-align:center">
                    PREČO TO FUNGUJE ?<br />Nie je to len test – je to systém pre vaše zdravie.
                </h2>
                <h2 class="hidden-xs hidden-sm" style="font-size:26px;color:#ffffff;text-shadow:1px 1px 4px #5d33fb;text-align:center">
                    PREČO TO FUNGUJE ?<br />Nie je to len test – je to systém pre vaše zdravie.
                </h2>

                <div class="">
                    <img src="~/Image/TestZinzino 2.jpg" class="img-responsive center-block" alt="TestZinzino" style="max-width:100%;height:auto;" title="Lepšie zdravie sa začína lepšou rovnováhou.">
                </div>

                <details class="w3-center mt-2">
                    „Všetko prebieha anonymne, bezpečne a v pohodlí domova."
                    <br />
                    🧩 1. Otestujte sa doma – jednoduchý krvný test (1 kvapka) odošlete do laboratória.
                    <br />📊 2. Získajte výsledky online – detailná správa s pomerom Omega-3 a Omega-6.
                    <br />💊 3. Upravte výživu – doplnky Zinzino pomáhajú dostať telo do rovnováhy.
                    <br />🔄 4. Sledujte pokrok – opakujte test po 120 dňoch a sledujte zmeny.
                    <br />🎓 5. Bezplatná konzultácia – ak si nie ste istí, čo potrebujete získajte od nás e-book zdarma:
                    <br />👉  5 prirodzených ciest k väčšej energii po odoslaní formulára.
                </details>

                <hr />

                <h2 style="font-size:22px;color:#ffffff;text-shadow:1px 1px 4px #5d33fb;text-align:center">
                    Stiahnite si náš bezplatný e-book<br />
                    a objavte jednoduché spôsoby, ako zvýšiť svoju energiu každý deň!
                </h2>

                @using (Html.BeginForm("OdoslanieSpravy", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal moj-formular" }))
                {
                    @Html.ValidationSummary(true, "Údaje boli neúspešné. Prosím opravte chyby a skúste to znovu.")
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-xs-12 col-md-8 col-md-offset-2">

                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Vaše meno", tabindex = 1 })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Zadajte email", tabindex = 2 })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            @*<div class="form-group">
                                <label for="Phone" class="control-label">Telefón</label>
                                <input type="text" name="Phone" id="Phone" class="form-control" placeholder="Zadajte telefónne číslo v tvare +4219..." tabindex="3" />
                                @Html.ValidationMessage("Phone", null, new { @class = "text-danger" })
                            </div>*@

                            <div class="form-group">
                                @Html.LabelFor(m => m.Text, new { @class = "control-label" })
                                @Html.TextAreaFor(m => m.Text, new { @class = "form-control", placeholder = "1.Sem napíšte krátku správu alebo otázku.\r\nE‑book je automaticky priložený k zaslanému e‑mailu.", style = "height:150px", tabindex = 5 })
                                @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
                            </div>

                            <div class="api-password-group">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary btn-lg tlacitko-moje" tabindex="6">Odoslať správu</button>
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
@*</div>*@

<p class="text-center mt-3">
    <a href="@Url.Action("Zdravie","Home",new {area = "Ladowebservis"})" class="btn btn-secondary">Späť na úvod</a>
</p>
