<!-- E-book Download Page -->
@using LadowebservisMVC.Models
@model DownloadEbookModel

@{
    ViewBag.Title = "DownloadEbook";
}

<style>
    /* DownloadEbook Page Styles */
    .ebook-wrapper {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 40px 20px;
    }

    .ebook-container {
        max-width: 750px;
        margin: 0 auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .ebook-success-banner {
        background: linear-gradient(135deg, #5d33fb 0%, #4a2fb5 100%);
        color: #fff;
        padding: 30px;
        text-align: center;
        display: none;
    }

    .ebook-success-banner.show {
        display: block;
    }

    .ebook-success-banner h2 {
        margin: 0 0 10px 0;
        font-size: 24px;
    }

    .ebook-success-banner p {
        margin: 0;
        font-size: 14px;
        opacity: 0.9;
    }

    .ebook-content {
        padding: 40px;
    }

    .ebook-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .ebook-header h1 {
        color: #5d33fb;
        font-size: 32px;
        margin: 0 0 15px 0;
        font-weight: 700;
    }

    .ebook-header .subtitle {
        color: #666;
        font-size: 16px;
        margin: 0;
        line-height: 1.6;
    }

    .ebook-preview {
        text-align: center;
        margin-bottom: 35px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .ebook-preview-icon {
        font-size: 60px;
        margin-bottom: 15px;
    }

    .ebook-preview h3 {
        color: #333;
        margin: 0 0 8px 0;
        font-size: 18px;
    }

    .ebook-preview p {
        color: #666;
        margin: 0;
        font-size: 13px;
    }

    .contact-items {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 30px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        padding: 12px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .contact-item-icon {
        color: #5d33fb;
        font-size: 18px;
        margin-right: 12px;
        flex-shrink: 0;
    }

    .contact-item-text {
        font-size: 13px;
        color: #333;
    }

    .contact-item-text strong {
        display: block;
        color: #5d33fb;
        margin-bottom: 2px;
    }

    /* Form Styling */
    .moj-formular {
        background: #fff;
    }

    .form-item {
        margin-bottom: 22px;
    }

    .form-item label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }

    .form-item label .required {
        color: #d9534f;
        margin-left: 2px;
    }

    .form-item .form-control {
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        padding: 12px 14px;
        font-size: 14px;
        transition: all 0.3s ease;
        width: 100%;
        box-sizing: border-box;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .form-item .form-control:focus {
        border-color: #5d33fb;
        box-shadow: 0 0 0 3px rgba(93, 51, 251, 0.1);
        outline: none;
    }

    .form-item .form-control.input-validation-error {
        border-color: #d9534f;
        background-color: #fff5f5;
    }

    .form-item .form-control.input-validation-error:focus {
        box-shadow: 0 0 0 3px rgba(217, 83, 79, 0.1);
    }

    .form-item textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    /* Validation Messages */
    .field-validation-error {
        color: #d9534f;
        font-size: 12px;
        margin-top: 6px;
        display: block;
        animation: slideDown 0.2s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-5px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .validation-summary-errors {
        background: #f8d7da;
        border: 2px solid #f5c6cb;
        color: #721c24;
        padding: 16px;
        border-radius: 6px;
        margin-bottom: 20px;
        animation: slideDown 0.3s ease;
    }

    .validation-summary-errors h2 {
        margin: 0 0 10px 0;
        font-size: 15px;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 20px;
    }

    .validation-summary-errors li {
        margin-bottom: 5px;
        font-size: 13px;
    }

    /* Info Boxes */
    .ebook-info {
        background: #e7f3ff;
        border-left: 4px solid #5d33fb;
        padding: 16px;
        border-radius: 6px;
        margin-bottom: 25px;
        font-size: 14px;
        color: #004085;
        line-height: 1.6;
    }

    .ebook-info strong {
        color: #5d33fb;
    }

    .ebook-info i {
        margin-right: 8px;
    }

    .privacy-notice {
        background: #f0f8ff;
        border-left: 4px solid #0066cc;
        padding: 14px;
        border-radius: 6px;
        font-size: 12px;
        color: #004085;
        line-height: 1.5;
    }

    .privacy-notice i {
        margin-right: 8px;
        color: #0066cc;
    }

    .privacy-notice a {
        color: #5d33fb;
        text-decoration: none;
        font-weight: 600;
    }

    .privacy-notice a:hover {
        text-decoration: underline;
    }

    /* Submit Button */
    .submit {
        margin-top: 30px;
    }

    .btn-submit {
        background: linear-gradient(135deg, #5d33fb 0%, #4a2fb5 100%);
        color: #fff;
        border: none;
        padding: 14px 40px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(93, 51, 251, 0.3);
        width: 100%;
    }

    .btn-submit:hover:not(:disabled) {
        background: linear-gradient(135deg, #4a2fb5 0%, #3d1f8f 100%);
        box-shadow: 0 6px 20px rgba(93, 51, 251, 0.4);
        transform: translateY(-2px);
    }

    .btn-submit:active:not(:disabled) {
        transform: translateY(0);
    }

    .btn-submit:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    /* Loading State */
    .btn-submit.loading {
        pointer-events: none;
    }

    .spinner {
        display: inline-block;
        width: 14px;
        height: 14px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: #fff;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin-right: 8px;
        vertical-align: middle;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .ebook-wrapper {
            padding: 20px 15px;
        }

        .ebook-content {
            padding: 25px;
        }

        .ebook-header h1 {
            font-size: 24px;
        }

        .ebook-header .subtitle {
            font-size: 14px;
        }

        .contact-items {
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .contact-item {
            padding: 10px;
        }

        .btn-submit {
            padding: 12px 20px;
            font-size: 15px;
        }
    }

    .hidden {
        display: none !important;
    }
</style>

<div class="ebook-wrapper">
    <div class="ebook-container">
        <!-- Success Banner (Hidden by default) -->
        <div id="successBanner" class="ebook-success-banner">
            <i class="fa fa-check-circle" style="font-size: 48px; margin-bottom: 15px; display: block;"></i>
            <h2>Ďakujeme za vašu žiadosť!</h2>
            <p>E-book bol odoslaný na vašu emailovú adresu. Prosím skontrolujte si svoj inbox a priečinok Spam.</p>
        </div>

        <!-- Main Content -->
        <div class="ebook-content" id="formContent">
            <!-- Header -->
            <div class="ebook-header">
                <h1><i class="fa fa-book" aria-hidden="true"></i> Stiahnuť bezplatný E-book</h1>
                <p class="subtitle">Päť prirodzených ciest k väčšej energii od Zinzina</p>
            </div>

            <!-- Preview -->
            <div class="ebook-preview">
                <div class="ebook-preview-icon">📘</div>
                <h3>Bezplatný E-book</h3>
                <p>Poďalšie poznatky o zdraví a energii, ktoré si môžete prečítať kedykoľvek</p>
            </div>

            <!-- Contact Info -->
            <div class="contact-items">
                <div class="contact-item">
                    <span class="contact-item-icon glyphicon glyphicon-envelope" aria-hidden="true"></span>
                    <div class="contact-item-text">
                        <strong>Email</strong>
                        info@ladowebservis.sk
                    </div>
                </div>
                <div class="contact-item">
                    <span class="contact-item-icon glyphicon glyphicon-earphone" aria-hidden="true"></span>
                    <div class="contact-item-text">
                        <strong>Telefón</strong>
                        +421917952432
                    </div>
                </div>
            </div>

            <!-- Info Box -->
            <div class="ebook-info">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
                <strong>Ako funguje:</strong> Vyplňte formulár nižšie a my vám e-book pošleme priamo na váš email. 
                Žiadne skryté poplatky, žiadne prekvapenia – len kvalitný obsah zadarmo.
            </div>

            <!-- Contact Form -->
            @using (Html.BeginForm("DownloadEbook", "Home", FormMethod.Post, new { @class = "moj-formular", enctype = "multipart/form-data", id = "ebookForm" }))
            {
                @Html.ValidationSummary(true, "Chyba pri spracovaní formulára. Prosím opravte nižšie uvedené chyby:")
                @Html.AntiForgeryToken()

                <div class="form-item">
                    @Html.LabelFor(m => m.Name, new { @class = "" })
                    <span class="required">*</span>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Napr. Jozef Varga", required = "required", maxlength = "100" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(m => m.Email, new { @class = "" })
                    <span class="required">*</span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", placeholder = "vasa@emailovaadrasa.sk", required = "required", maxlength = "100" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(m => m.Sprava, "Vaša správa (voliteľné)")
                    @Html.TextAreaFor(m => m.Sprava, new { @class = "form-control", placeholder = "Povedzte nám niečo o sebe alebo svoje otázky...", rows = "4", maxlength = "500" })
                    @Html.ValidationMessageFor(m => m.Sprava, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(m => m.Captcha, "Bezpečnostný kód")
                    <span class="required">*</span>
                    @Html.TextBoxFor(m => m.Captcha, new { @class = "form-control", placeholder = "Napíšte bezpečnostný kód", required = "required", autocomplete = "off", maxlength = "10" })
                    @Html.ValidationMessageFor(m => m.Captcha, "", new { @class = "field-validation-error" })
                    <small style="color: #999; margin-top: 6px; display: block;"><i class="fa fa-shield" aria-hidden="true"></i> Pre ochranu pred spamom</small>
                </div>

                <!-- Privacy Notice -->
                <div class="privacy-notice">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <strong>Ochrana údajov:</strong> Vaše údaje sú bezpečne uložené a budú použité len na odoslanie e-booku. 
                    <a href='@Url.Action("Gdpr","Home")' target="_blank">Prečítajte si našu GDPR politiku</a>.
                </div>

                <!-- Submit Button -->
                <div class="submit">
                    <button type="submit" id="submitButton" class="btn btn-submit" aria-label="Odoslať žiadosť o e-book">
                        <i class="fa fa-download" aria-hidden="true"></i> Odoslať a stiahnuť E-book
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Email validation regex (RFC 5322 simplified)
        var strictEmailRegex = new RegExp("^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$");

        // Form submission handler
        (function () {
            var form = document.getElementById('ebookForm');
            var submitBtn = document.getElementById('submitButton');
            var formContent = document.getElementById('formContent');
            var successBanner = document.getElementById('successBanner');
            var originalBtnHtml = '<i class="fa fa-download" aria-hidden="true"></i> Odoslať a stiahnuť E-book';

            if (form && submitBtn) {
                // Check for success message from server
                var urlParams = new URLSearchParams(window.location.search);
                if (urlParams.get('success') === '1') {
                    showSuccessState();
                }

                form.addEventListener('submit', function (e) {
                    // Validate form
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        return false;
                    }

                    // Validate email format
                    var emailInput = document.getElementById('Email');
                    if (emailInput && emailInput.value) {
                        if (!strictEmailRegex.test(emailInput.value.trim())) {
                            e.preventDefault();
                            emailInput.classList.add('input-validation-error');
                            return false;
                        }
                    }

                    // Show loading state
                    submitBtn.classList.add('loading');
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner"></span>Odosielam...';
                });

                function showSuccessState() {
                    if (formContent && successBanner) {
                        formContent.style.display = 'none';
                        successBanner.classList.add('show');
                        
                        // Scroll to top
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    }
                }
            }
        })();

        // Email validation with real-time feedback
        (function () {
            var emailInput = document.getElementById('Email');
            if (emailInput) {
                emailInput.addEventListener('blur', function () {
                    validateEmail(this);
                });

                emailInput.addEventListener('input', function () {
                    this.classList.remove('input-validation-error');
                });
            }

            function validateEmail(inputElement) {
                var email = inputElement.value.trim();
                
                if (!email) {
                    inputElement.classList.remove('input-validation-error');
                    return;
                }

                var isValid = strictEmailRegex.test(email);
                
                if (!isValid) {
                    inputElement.classList.add('input-validation-error');
                } else {
                    inputElement.classList.remove('input-validation-error');
                }
            }
        })();

        // Name validation
        (function () {
            var nameInput = document.getElementById('Name');
            if (nameInput) {
                nameInput.addEventListener('blur', function () {
                    validateName(this);
                });

                nameInput.addEventListener('input', function () {
                    this.classList.remove('input-validation-error');
                });
            }

            function validateName(inputElement) {
                var name = inputElement.value.trim();
                
                if (!name) {
                    inputElement.classList.remove('input-validation-error');
                    return;
                }

                // Allow letters, numbers, spaces, hyphens, apostrophes, and Slovak accented characters
                var isValid = /^[a-zA-ZáäčďéíĺľňóôŕšťúůýžÁÄČĎÉÍĹĽŇÓÔŔŠŤÚŮÝŽ\s\-']{2,}$/.test(name);
                
                if (!isValid) {
                    inputElement.classList.add('input-validation-error');
                } else {
                    inputElement.classList.remove('input-validation-error');
                }
            }
        })();

        // Prevent multiple submissions
        (function () {
            var form = document.getElementById('ebookForm');
            if (form) {
                form.addEventListener('submit', function () {
                    if (form.classList.contains('submitting')) {
                        return false;
                    }
                    form.classList.add('submitting');
                });
            }
        })();
    </script>
}


