            <p class="small text-center" style="color: #5d33fb; margin-top: 1rem;">Tip: kliknite na "Prida do košíka" pri produkte a pokraèujte k platbe.</p>
        </div>
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            try {
                if (window.lwsRenderFavorites) {
                    window.lwsRenderFavorites();
                    // if render produced no items, show placeholder
                    setTimeout(function () {
                        var el = document.getElementById('favoritesList');
                        if (el && el.children.length === 0) {
                            el.innerHTML = '<li class="list-group-item">iadne ob¾úbené produkty.</li>';
                        }
                    }, 150);
                } else {
                    var el = document.getElementById('favoritesList');
                    if (el) el.innerHTML = '<li class="list-group-item">iadne ob¾úbené produkty.</li>';
                }
            } catch (e) { }
        });
    </script>
}
