@using LadowebservisMVC.Models
@model LoginModel

@{
    ViewBag.Title = "Login";
}


<div class="form-horizontal w3-text-black pt-4">
    <h2 class="section-heading text-uppercase">Pre vstup do členskej sekcie musíte zadať email a heslo alebo sa zaregistrovať ako nový člen!</h2>

    @using (Html.BeginForm("Member", "Home", FormMethod.Post, new { @class = "form-horizontal moj-formular" }))
    {
        <div class="form-item">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Váš e-mail slúži ako prihlasovacie meno" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-item">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Vaše heslo" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        @Html.ValidationSummary(true)

        <div class="form-section">
            <a href="@Url.Action("Member","Home")" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-primary btn-lg tlacitko-moje">Prihlásenie</a>
            <input type="submit" id="submitButton" class="hidden" />
        </div>
    }
</div>

<div class="form-horizontal w3-text-white">
    <h2 class="pull-right">
        <a href="@Url.Action("Registracia", "Home")" class="btn btn-primary btn-lg tlacitko-moje">Registrovať ako nový člen</a>
    </h2>
</div>
